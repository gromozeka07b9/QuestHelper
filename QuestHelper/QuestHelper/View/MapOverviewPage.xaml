<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             xmlns:viewmodel="clr-namespace:QuestHelper.ViewModel;assembly=QuestHelper"
             xmlns:local="clr-namespace:QuestHelper.View.Geo"
             xmlns:animationForms="clr-namespace:Lottie.Forms;assembly=Lottie.Forms"
             xmlns:animationResource="clr-namespace:QuestHelper.Resources"
             x:Class="QuestHelper.View.MapOverviewPage" NavigationPage.HasNavigationBar="False" NavigationPage.HasBackButton="False" Appearing="ContentPage_Appearing" Disappearing="ContentPage_Disappearing">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="60*"/>
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <local:CustomOverviewMap Grid.Column="0" Grid.Row="0" Grid.RowSpan="3" x:Name="MapOverview" IsShowingUser="true" MapType="Street">
            </local:CustomOverviewMap>
            <StackLayout Grid.Column="0" Grid.ColumnSpan="1" Grid.Row="0" Grid.RowSpan="1" IsVisible="{Binding Path=IsLoadingPoi}" BackgroundColor="Yellow">
                <animationForms:AnimationView x:Name="SyncAnimation" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Margin="0"
                                        Animation="{animationResource:AnimationResourceExtension hourglass}"
                                        Loop="True"
                                        AutoPlay="True"
                                        IsEnabled="True"
                                        IsPlaying="{Binding Path=IsLoadingPoi}"                                                                      
                                        IsVisible="True"
                                        WidthRequest="100"
                                        HeightRequest="100"                                        
                                        />
            </StackLayout>
            <StackLayout Grid.Row="1" Grid.Column="0" IsVisible="{Binding IsPoiDialogVisible}">
                <Frame CornerRadius="5" Padding="20" Margin="20" BackgroundColor="White">
                    <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20*"/>
                            <RowDefinition Height="80*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Row="0" Text="{Binding CurrentPoiName}" TextColor="Black" FontSize="18" HorizontalTextAlignment="Center"></Label>
                        <Image Grid.Row="0" Grid.RowSpan="2" Source="{Binding CurrentPoiImage}" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="0" BackgroundColor="Red">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding AuthorizationCommand}" />
                            </Image.GestureRecognizers>
                        </Image>
                    </Grid>
                    <!--RelativeLayout BackgroundColor="Yellow">
                        <Image Source="{Binding CurrentPoiImage}" VerticalOptions="FillAndExpand" Margin="0" Aspect="AspectFill" BackgroundColor="Red">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding AuthorizationCommand}" />
                            </Image.GestureRecognizers>
                        </Image>
                        <Label Text="{Binding CurrentPoiName}" TranslationY="165" TextColor="Black" FontSize="18" HorizontalTextAlignment="Center"></Label>
                    </-->
                    <!--StackLayout>
                    <Label Text="{Binding CurrentPoiName}" TextColor="Black" FontSize="18" HorizontalTextAlignment="Center"></Label>
                    <Image Source="{Binding CurrentPoiImage}" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="0" BackgroundColor="Red">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding AuthorizationCommand}" />
                        </Image.GestureRecognizers>
                    </Image>
                </-->
                </Frame>
            </StackLayout>
            <Button Grid.Row="2" HeightRequest="50" WidthRequest="80" Text="Refresh" Command="{Binding UpdatePOIsCommand}"></Button>
        </Grid>
    </ContentPage.Content>
</ContentPage>

<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="QuestHelper.View.SettingsPage"
             BackgroundColor="White"
             Appearing="ContentPage_Appearing" Disappearing="ContentPage_Disappearing">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="5*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"></ColumnDefinition>
                <ColumnDefinition Width="5*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackLayout Grid.Row="0" Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="Start">
                <Image Source="baseline_arrow_back_black_48.png" WidthRequest="40" HeightRequest="40" Margin="10,10,0,0" VerticalOptions="Start" HorizontalOptions="Start">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding BackNavigationCommand}"/>
                    </Image.GestureRecognizers>
                </Image>
                <StackLayout HorizontalOptions="FillAndExpand"></StackLayout>
            </StackLayout>

            <StackLayout Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Orientation="Horizontal" HorizontalOptions="End" Margin="10,0,10,0">
                <Label Text="Загружать фото из основной памяти" FontSize="18" VerticalOptions="Center" HorizontalOptions="Fill" HorizontalTextAlignment="Start"></Label>
                <CheckBox VerticalOptions="Center" HorizontalOptions="End" WidthRequest="48" HeightRequest="48"></CheckBox>
            </StackLayout>
            <StackLayout Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Margin="10,0,10,0">
                <Label Text="Данный параметр влияет на то, откуда приложение будет загружать фотографии. Если фотографии хранятся на дополнительной карте памяти, отключите данный параметр." FontSize="10" VerticalOptions="Center" HorizontalOptions="Fill" HorizontalTextAlignment="End"></Label>           
            </StackLayout>
            <StackLayout Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2">
                <Label Text="В основной памяти найдено фотографий:" FontSize="14" VerticalOptions="Center" HorizontalOptions="Fill" HorizontalTextAlignment="Start"></Label>           
                <Label Text="568" FontSize="14" VerticalOptions="Center" HorizontalOptions="Fill" HorizontalTextAlignment="End"></Label>           
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuestHelper.View.RoutePointPage">
    <ContentPage.Content>
        <TableView Intent="Form" HasUnevenRows="True">
            <TableRoot>
                <TableSection Title="Параметры данной точки:">
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="10,0,0,0">
                            <Label Text="{Binding Coordinates}" />
                        </StackLayout>
                    </ViewCell>
                    <EntryCell Placeholder="Название" Text="{Binding Name}" Keyboard="Keyboard.Default">
                    </EntryCell>
                    <ImageCell ImageSource="icon.png" Text="example" />
                    <ImageCell ImageSource="icon.png" Text="example" />
                    <ImageCell ImageSource="icon.png" Text="example" />
                    <ViewCell Height="200">
                        <StackLayout Orientation="Horizontal" Padding="10,0,0,0">
                            <Editor Text="{Binding Description}" HorizontalOptions="FillAndExpand"></Editor>
                        </StackLayout>
                    </ViewCell>
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>
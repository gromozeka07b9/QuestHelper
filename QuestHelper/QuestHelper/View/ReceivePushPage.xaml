<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuestHelper.View.ReceivePushPage" NavigationPage.HasNavigationBar="False" Appearing="ReceivePushPage_OnAppearing" Disappearing="ReceivePushPage_OnDisappearing">
    <ContentPage.ToolbarItems></ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" HorizontalOptions="Center" VerticalOptions="StartAndExpand" Margin="30">
            <Frame HorizontalOptions="Center" VerticalOptions="CenterAndExpand" HasShadow="True" BackgroundColor="LightGray" CornerRadius="10">
                <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand"  VerticalOptions="StartAndExpand">
                    <Label Text="{Binding MessageTitle}" FontSize="Medium" HorizontalTextAlignment="Center" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Margin="10" />
                    <Label Text="{Binding MessageBody}" FontSize="Small" HorizontalTextAlignment="Center" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Margin="10" />
                    <Button Text="Ok" HorizontalOptions="EndAndExpand" Margin="10" Command="{Binding OkCommand}"></Button>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
                <view:CustomMap HeightRequest="200" x:Name="PointMapOverview" VerticalOptions="FillAndExpand"
                                IsShowingUser="true"
                                UseInterceptTouchEvent="true"
                                MapType="Street" 
                />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
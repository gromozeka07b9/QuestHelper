<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms" 
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
      x:Class="QuestHelper.Controls.ShareServiceView"
      x:Name="RootGrid">
    <Frame CornerRadius="5" BackgroundColor="LightGray" BorderColor="Black" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="6*"></RowDefinition>
                <RowDefinition Height="4*"></RowDefinition>
            </Grid.RowDefinitions>
            <Image Grid.Column="0" Grid.Row="0" Source="{Binding ImgSource, Source={x:Reference RootGrid}}" WidthRequest="160" HeightRequest="160" VerticalOptions="StartAndExpand"></Image>
            <Label Grid.Column="0" Grid.Row="1" Text="{Binding Text, Source={x:Reference RootGrid}}" FontSize="10" HorizontalTextAlignment="Center" VerticalOptions="StartAndExpand"></Label>
        </Grid>
    </Frame>
</Grid>